<div class="mt-4">
    <div class="row">
        {{#each cars}}
            <div class="col-sm-6 col-lg-4">
                <h2>{{ this.name }}</h2>
                <div class="card" style="width:400px">
                    <img class="card-img-top" src="{{ this.image }}" alt="Card image" style="max-width: 380px; height:380px">
                    <div class="card-body">
                        <h4 class="card-title">Manufacture: {{ this.manufacture }}</h4>
                        <p class="card-text">Engine: {{ this.engine }}</p>
                        <p class="card-text">Power: {{ this.power }}</p>
                        <p class="card-text">Price: {{ this.price }} VND</p>
                        <a href="/cars/info/{{this._id}}" class="btn btn-primary">See Profile</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>