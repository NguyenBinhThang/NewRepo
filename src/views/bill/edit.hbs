<div class="row justify-content-center">
    <div class="col col-8">
        <h2 class="text-center">Chỉnh sửa hóa đơn</h2>
        <form id="f" action="/bill/update/{{ bill._id }}?_method=PUT" method="POST">
            <div class="form-group">
                <label for="namePur">Tên khách hàng:</label>
                <input type="text" class="form-control" name="namePur" placeholder="Tên khách hàng" id="namePur" value="{{ bill.namePur }}">
            </div>
            <div class="form-group">
                <label for="address">Địa chỉ:</label>
                <input type="text" class="form-control" name="address" placeholder="Địa chỉ" id="address" value="{{ bill.address }}">
            </div>
            <div class="form-group">
                <label for="phone">Số điện thoại:</label>
                <input type="text" class="form-control" name="phone" placeholder="Số điện thoại" id="phone" value="{{ bill.phone }}">
            </div>
            <div class="form-group">
                <label for="nameSeller">Tên nhân viên bán:</label>
                <input type="text" class="form-control" name="nameSeller" placeholder="Tên nhân viên bán" id="nameSeller" value="{{ bill.nameSeller }}">
            </div>
            <div class="form-group">
                <label for="nameCar">Tên xe:</label>
                <input type="text" class="form-control" name="nameCar" placeholder="Tên xe" id="nameCar" value="{{ bill.nameCar }}">
            </div>
            <div class="form-group">
                <label for="price">Giá bán:</label>
                <input type="text" class="form-control" name="price" placeholder="Giá" id="price" value="{{ bill.price }}">
            </div>
            <div class="form-group">
                <label for="carManufacturer">Tên hãng sản xuất:</label>
                <input type="text" class="form-control" name="carManufacturer" placeholder="Car Manufacturer" id="carManufacturer" value="{{ bill.carManufacturer }}">
            </div>
            <div class="form-group">
                <p class="text-danger">{{message}}</p>
            </div>
            <button type="submit" onclick="myFunction()" class="btn btn-primary">Cập nhật</button>
        </form>
    </div>
</div>

<script>
var form = document.getElementById('f');

function myFunction() {
  if (form.checkValidity()) {
    alert("Updating Succesful!");
  }
}
</script>