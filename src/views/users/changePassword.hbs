<form action="/users/change/{{ session.user._id }}" method="POST">
    <h2>Đổi mật khẩu</h2>
    <label for="oldPass">Mật khẩu cũ</label>
    <input type="password" name="oldPass" id="oldPass" placeholder="Mật khẩu cũ">
    <label for="newPass">Mật khẩu mới</label>
    <input type="password" name="newPass" id="newPass" placeholder="Mật khẩu cũ">
    <label for="reNewPass">Nhập lại mật khẩu mới</label>
    <input type="password" name="reNewPass" id="reNewPass" placeholder="Mật khẩu cũ">
    <button type="submit">Đổi mật khẩu</button>
</form> 