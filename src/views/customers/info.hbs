<h2 style="text-align: center">Thông tin khách hàng</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Tên khách hàng</th>
      <th>Địa chỉ</th>
      <th>Email</th>
      <th>Số điện thoại</th>
      <th>Ngày tạo</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>{{ customer.name }}</td>
        <td>{{ customer.address }}</td>
        <td>{{ customer.email }}</td>
        <td>{{ customer.phone }}</td>
        <td>{{ customer.createAt }}</td>
        </tr>
  </tbody>
</table>